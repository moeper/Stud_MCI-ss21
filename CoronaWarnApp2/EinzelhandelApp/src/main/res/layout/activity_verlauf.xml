<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityVerlauf" android:background="@drawable/background">

    <TextView
            android:text="Aktuelle Kundenanzahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_marginTop="38dp" android:layout_marginLeft="28dp" android:id="@+id/textView6"
            android:textSize="30sp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_centerInParent="true"/>
    <ImageView
            android:layout_width="303dp"
            android:layout_height="287dp" app:srcCompat="@drawable/kundenzahl"
            android:layout_alignParentStart="true" android:layout_marginStart="42dp"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_marginTop="90dp"
            android:layout_marginLeft="42dp" android:id="@+id/imageView4" android:layout_centerHorizontal="true"/>

    <TextView
            android:text="21.06.2021"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="103dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="206dp"
            android:layout_marginLeft="103dp" android:id="@+id/textView7" android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="13:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="133dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="153dp"
            android:layout_marginLeft="133dp"
            android:id="@+id/textView11" android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:layout_centerHorizontal="true"/>
    <Button
            android:text="Startseite"
            android:drawableTop="@drawable/startseite"
            android:layout_width="122dp"
            android:layout_height="103dp" android:layout_alignParentStart="true"
            android:layout_marginStart="-2dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="-4dp" android:layout_marginLeft="-2dp"
            android:id="@+id/startseite" android:textSize="10sp"/>
    <Button
            android:text="QR-Code"
            android:drawableTop="@drawable/qr"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/qrseite" android:layout_marginBottom="-5dp"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_marginRight="121dp" android:layout_marginEnd="121dp" android:layout_centerHorizontal="true"
            android:textSize="10sp"/>

    <Button
        android:id="@+id/verlauf"
        android:layout_width="122dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-5dp"
        android:background="@drawable/green"
        android:drawableTop="@drawable/verlauf"
        android:text="info"
        android:textSize="10sp" />
</RelativeLayout>