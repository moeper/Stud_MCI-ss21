<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityQrZeigen" android:background="@drawable/background">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="664dp" app:srcCompat="@drawable/qrcode" android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_marginTop="30dp" android:layout_marginLeft="0dp" android:id="@+id/imageView"
            android:layout_centerVertical="true"/>

    <Button
            android:text="Startseite"
            android:drawableTop="@drawable/startseite"
            android:layout_width="109dp"
            android:layout_height="89dp" android:layout_alignParentStart="true"
            android:layout_marginStart="-2dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="-4dp" android:layout_marginLeft="-2dp"
            android:id="@+id/startseite" android:textSize="10sp"/>
    <Button
            android:text="QR-Code"
            android:drawableTop="@drawable/qr"
            android:background="@drawable/green"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/qrseite" android:layout_marginBottom="-1dp"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_marginRight="120dp" android:layout_marginEnd="120dp" android:layout_centerHorizontal="true"
            android:textSize="10sp"/>

    <Button
        android:id="@+id/verlauf"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-5dp"
        android:drawableTop="@drawable/verlauf"
        android:text="info"
        android:textSize="10sp" />
</RelativeLayout>