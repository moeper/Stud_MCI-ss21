<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund"
    tools:context=".testEvaluate">

    <TextView
        android:id="@+id/ergebniseingeben"
        android:layout_width="343dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="34dp"
        android:gravity="center"
        android:text="Ergebnis eingeben"
        android:textColor="#5DB075"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_id"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ergebniseingeben"
        android:layout_marginStart="102dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="102dp"
        android:gravity="center"
        android:text="Corona Test-ID"
        android:textColor="#5DB075"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ergebniseingeben" />

    <TextView
        android:id="@+id/id"
        android:layout_width="404dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/positivButton"
        android:layout_below="@+id/test_id"
        android:layout_marginStart="0dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="178dp"
        android:gravity="center"
        android:text="id"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_id" />

    <Button
        android:id="@+id/negativButton"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="255dp"
        android:background="@drawable/layout_bg_round"
        android:backgroundTint="#5DB075"
        android:text="Negativ"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <Button
        android:id="@+id/positivButton"
        android:layout_width="156dp"
        android:layout_height="54dp"
        android:layout_above="@+id/negativButton"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/layout_bg_round"
        android:backgroundTint="#E81A1A"
        android:text="Positiv"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/negativButton"
        app:layout_constraintVertical_bias="1.0" />

</RelativeLayout>