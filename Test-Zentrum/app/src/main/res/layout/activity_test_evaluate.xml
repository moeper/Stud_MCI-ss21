<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund"
    tools:context=".testEvaluate">

    <TextView
        android:id="@+id/ergebniseingeben"
        android:layout_width="343dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="34dp"
        android:gravity="center"
        android:text="Ergebnis eingeben"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/test_id"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ergebniseingeben"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="102dp"
        android:gravity="center"
        android:text="Corona Test-ID"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id"
        android:layout_width="404dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/test_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="7dp"
        android:gravity="center"
        android:text="id"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/negativButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="103dp"
        android:background="#5DB075"
        android:text="Negativ"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/positivButton"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_below="@+id/negativButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="232dp"
        android:background="#E81A1A"
        android:text="Positiv"
        android:textColor="#FFFFFF" />

</RelativeLayout>