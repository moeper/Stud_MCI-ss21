<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund"
    tools:context=".AddTestActivity">


    <Button
        android:id="@+id/cancelId"
        android:layout_width="123dp"
        android:layout_height="47dp"
        android:layout_below="@+id/testId_holder"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="80dp"
        android:text="Abbruch"
        android:textColor="#FFFFFF"
        app:backgroundTint="#5DB075"
        android:background="@drawable/layout_bg_round"
        />

    <Button
        android:id="@+id/saveId"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_below="@+id/testId_holder"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="82dp"
        android:layout_toStartOf="@+id/cancelId"
        android:text="Speichern"
        android:textColor="#FFFFFF"
        app:backgroundTint="#5DB075"
        android:background="@drawable/layout_bg_round"
        />

    <Button
        android:id="@+id/testQrCodeId"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kundeId_holder"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="85dp"
        android:text="Test QR-Code scannen"
        android:textColor="#FFFFFF"
        app:backgroundTint="#5DB075"
        android:background="@drawable/layout_bg_round"
        />


    <TextView
        android:id="@+id/testErfassenId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="111dp"
        android:gravity="center"
        android:text="Test erfassen"
        android:textColor="#000000"
        android:textSize="30sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/testInfoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testErfassenId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="22dp"
        android:gravity="center"
        android:text="Vorgehen: \n1. QR-Code des zu testenden scannen \n2. ID des Coronatests scannen oder eingeben\n3.Speichern,\num das Ergebnis spÃ¤ter einzutragen"
        android:textColor="#000000"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/kundeQrCodeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testInfoId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="105dp"
        android:text="Kunde QR-Code scannen"
        android:textColor="#FFFFFF"
        app:backgroundTint="#5DB075"
        android:background="@drawable/layout_bg_round"

        />

    <EditText
        android:id="@+id/kundeId_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kundeQrCodeId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/testId_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testQrCodeId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />


