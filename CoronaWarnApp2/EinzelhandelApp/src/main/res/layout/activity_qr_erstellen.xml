<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityQrErstellen" android:background="@drawable/background">

    <TextView
            android:text="QR Code Erstellt"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" android:id="@+id/textView2" tools:layout_editor_absoluteY="28dp"
            tools:layout_editor_absoluteX="91dp" android:textSize="30sp"/>
    <Button
            android:text="QR Code als PDF herunterladen"
            android:layout_width="309dp"
            android:layout_height="132dp" android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:layout_marginTop="156dp" android:layout_marginLeft="30dp"
            android:id="@+id/buttonQrPdf" android:textSize="30sp" android:layout_centerHorizontal="true"/>
    <Button
            android:text="QR Code anzeigen"
            android:layout_width="318dp"
            android:layout_height="194dp" android:layout_alignParentStart="true"
            android:layout_marginStart="27dp" android:layout_alignParentLeft="true"
            android:layout_below="@id/buttonQrPdf"
            android:layout_alignParentBottom="true" android:layout_marginBottom="203dp" android:layout_marginLeft="27dp"
            android:id="@+id/buttonQrZeigen" android:textSize="30sp" android:layout_marginTop="45dp"/>
    <Button
            android:text="Startseite"
            android:drawableTop="@drawable/startseite"
            android:layout_width="109dp"
            android:layout_height="89dp" android:layout_alignParentStart="true"
            android:layout_marginStart="-2dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="-4dp" android:layout_marginLeft="-2dp"
            android:id="@+id/startseite" android:textSize="10sp"/>
    <Button
            android:text="QR-Code"
            android:drawableTop="@drawable/qr"
            android:background="@drawable/green"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/qrseite" android:layout_marginBottom="-1dp"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_marginRight="120dp" android:layout_marginEnd="120dp" android:layout_centerHorizontal="true"
            android:textSize="10sp"/>

    <Button
        android:id="@+id/verlauf"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-5dp"
        android:drawableTop="@drawable/verlauf"
        android:text="info"
        android:textSize="10sp" />
</RelativeLayout>